{
  "private": true,
  "workspaces": [
    "./packages/juice-sdk-core",
    "./packages/juice-sdk-react"
  ],
  "scripts": {
    "build": "yarn workspaces run build",
    "publish:core": "yarn workspace juice-sdk-core publish",
    "publish:react": "yarn workspace juice-sdk-react publish",
    "publish": "yarn publish:core && yarn publish:react",
    "postinstall": "patch-package",
    "clean": "rm -Rf node_modules **/node_modules **/dist"
  },
  "packageManager": "yarn@1.22.22"
}
